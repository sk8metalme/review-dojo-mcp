{
  "name": "review-knowledge-system",
  "version": "2.3.0",
  "description": "PR Review Knowledge Collection and Management System",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "apply-knowledge": "./dist/index.js",
    "review-dojo-mcp": "./dist/interfaces/mcp/McpServer.js"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:arch": "vitest run tests/architecture/",
    "test:arch:watch": "vitest tests/architecture/",
    "test:unit": "vitest run --exclude tests/architecture/",
    "lint": "eslint src/ tests/",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "github",
    "pr",
    "review",
    "knowledge",
    "ai",
    "onion-architecture",
    "ddd"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/semver": "^7.7.1",
    "@vitest/ui": "^4.0.16",
    "tsarch": "^5.4.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "@octokit/rest": "^22.0.1",
    "semver": "^7.7.3",
    "zod": "^4.2.1"
  }
}
